{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@presento/nest-modules": ["libs/nest-modules/src/index.ts"],
      "@presento/next-utils": ["libs/next-utils/src/index.ts"],
      "@presento/presento-api-modules": [
        "libs/presento-api-modules/src/index.ts"
      ],
      "@presento/presento-api-types": ["libs/presento-api-types/src/index.ts"],
      "@presento/presento-web-design-system": [
        "libs/presento-web-design-system/src/index.ts"
      ],
      "@presento/presento-web-modules": [
        "libs/presento-web-modules/src/index.ts"
      ],
      "@presento/presento-web-scenes": [
        "libs/presento-web-scenes/src/index.ts"
      ],
      "@presento/presento-web-types": ["libs/presento-web-types/src/index.ts"],
      "@presento/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
